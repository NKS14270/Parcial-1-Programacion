@model IEnumerable<Parcial_1__Programacion.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}


<div class="ListaPacientes">
    <h1 class="text-center">LISTADO DE PACIENTES</h1>
    <h3>Cantidad de Pacientes : @Model.Count()</h3>
    <h4>Pacientes de OSDE : @Model.Where(x => x.obra?.Nombre == "OSDE").Count()</h4>
    <h4>Pacientes de APROSS : @Model.Where(x => x.obra?.Nombre == "APROSS").Count()</h4>
    <h4>Pacientes de PAMI : @Model.Where(x => x.obra?.Nombre == "PAMI").Count()</h4>
    <h4>Pacientes de OTROS : @Model.Where(x => x.obra?.Nombre == "OTRO").Count()</h4> 
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
               @*  @Html.DisplayNameFor(model => model.IdObrasocial) *@
                Obra Social
            </th> 
            <th> </th>
            

            <th>Sintomas</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {

            foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Edad)
                    </td>
                    <td>
@*                         @Html.DisplayFor(modelItem => item.IdObrasocial)
 *@                     @item.obra?.Nombre
</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sintomas)
                    </td>
<td>
                        <a class="text-decoration-none eliminar" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td style="text-align: center" colspan="5">No hay pacientes disponibles</td>
            </tr>
        }
    </tbody>
</table>
